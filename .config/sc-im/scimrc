# vim:syn=conf
set autobackup          = 5
set autocalc            = 1
set autowrap            = 0
set half_page_scroll    = 1
set underline_grid      = 0
set numeric             = 0
set numeric_decimal     = 1
set numeric_zero        = 1
set newline_action      = j

nmap "C" "\✓"
nmap "D" "\•"
nmap "`" "+"
nnoremap "Q" "q"
nnoremap "q" ":q<CR>"
nnoremap "N" ":set numeric<CR>"
nnoremap "n" ":set nonumeric<CR>"

