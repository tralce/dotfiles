#!/bin/bash

function run {
  if command -v $1 &> /dev/null
  then
    if ! pgrep -f $1 ;
    then
      $@&
    fi
  fi
}

xmodmap -e 'keycode 135='

run ~/.bin/monitor_downloads.sh
run discover-overlay
run discord --start-minimized
run openrgb -p tralce
run picom -cCGb -m 0.95 -i 0.95 --vsync --backend glx
run steam -silent
run synergys --config ~/.config/Synergy/synergy.sgc
run xbindkeys
run keep-presence -c

(while true;do razer.py;sleep 15;done) &
